<UserControl x:Class="PentaPrint.View.MainEngine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PentaPrint.View"
             mc:Ignorable="d" d:DesignWidth="300" Height="Auto">
    <GroupBox Header="Main Engine">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Content="Partnumber" Grid.Column="0" Grid.Row="0"/>
            <TextBox x:Name="Partnumber" Grid.Column="1" Grid.Row="0" Margin="2" Text="{Binding Barcode.Partnumber, Mode=TwoWay}"/>

            <Label Content="Serialnumber" Grid.Column="0" Grid.Row="1"/>
            <TextBox x:Name="Serialnumber" Grid.Column="1" Grid.Row="1" Margin="2" Text="{Binding Barcode.Serialnumber, Mode=TwoWay}"/>
        </Grid>
    </GroupBox>
</UserControl>
